<Window x:Class="PursuitAlert.Client.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Background="{StaticResource BaseBrush}"
        Title="Pursuit Alert Settings"
        SizeToContent="WidthAndHeight"
        Icon="pack://siteoforigin:,,,/Resources/pursuitalert.ico">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Settings" Grid.Row="0" Foreground="{StaticResource LightBrush}" VerticalAlignment="Center" FontSize="22" />
    </Grid>
</Window>