<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PursuitAlert.Client.Resources.Colors">

    <Color x:Key="Base" A="255" R="34" G="41" B="49" />
    <Color x:Key="Accent" A="255" R="57" G="64" B="72" />
    <Color x:Key="Muted" A="255" R="92" G="93" B="97" />
    <Color x:Key="Light" A="255" R="255" G="255" B="255" />

    <Color x:Key="EmergencyRed" A="255" R="235" G="30" B="39" />
    <Color x:Key="MoveOverYellow" A="255" R="255" G="212" B="0" />
    <Color x:Key="PursuitBlue" A="255" R="62" G="92" B="170" />
    <Color x:Key="CriticalGreen" A="255" R="0" G="148" B="56" />

    <SolidColorBrush x:Key="BaseBrush" Color="{StaticResource Base}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}" />
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource Muted}" />
    <SolidColorBrush x:Key="LightBrush" Color="{StaticResource Light}" />
    <SolidColorBrush x:Key="EmergencyRedBrush" Color="{StaticResource EmergencyRed}" />
    <SolidColorBrush x:Key="CriticalGreenBrush" Color="{StaticResource CriticalGreen}" />
    <SolidColorBrush x:Key="MoveOverYellowBrush" Color="{StaticResource MoveOverYellow}" />
    <SolidColorBrush x:Key="PursuitBlueBrush" Color="{StaticResource PursuitBlue}" />
</ResourceDictionary>